<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/specific_border"
    android:elevation="20dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="8dp"
        android:id="@+id/imageRestauran"
        android:src="@drawable/ic_home_black_24dp"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageBookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_bookmark_black_48dp"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/textRestauran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Nama Tempat"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Alamat Tempat"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textRestauran"
            android:textSize="12dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating Tempat"
                android:textSize="12dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:background="@drawable/rounded_status"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Status Tempat"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>



</LinearLayout>